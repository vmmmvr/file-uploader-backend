generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}

model User {
  id       Int    @id @default(autoincrement())
  uid      String @unique @default(uuid())
  email    String @unique
  name     String
  password String

  createdAt DateTime  @default(now())
  updatedAt DateTime?
}

model File {
  id        Int       @id @default(autoincrement())
  uid       String    @unique @default(uuid())
  url       String    @unique
  name      String    @unique
  views     Int       @default(0)
  tag       String?
  type       String
  createdAt DateTime  @default(now())
  updatedAt DateTime?
}
